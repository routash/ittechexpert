{% extends 'admin_base.html.twig' %}

{% block title %}Add Programs{% endblock %}

{% block body %}
<div id="wrapper">
    {% include 'admin/common/sidebar.html.twig' %}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {% include 'admin/common/header.html.twig' %}
            <div class="sb-page-header pb-10 sb-page-header-dark bg-gradient-primary-to-secondary">
                <div class="container-fluid">
                    <div class="sb-page-header-content py-5">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Add Program</h1>
                            <a href="{{ url("programs") }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">View All</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid mt-n10">
                <div class="flush-alert">
                    {% include 'admin/common/flash.html.twig' %}
                </div>
                <div class="card">
                    <div class="card-body">
                        {{ include('admin/programs/_form.html.twig', {'button_label': 'Add'}) }}
                    </div>
                </div>
            </div>
        </div>
        {% include 'admin/common/footer.html.twig' %}
    </div>
</div>
{% endblock %}
